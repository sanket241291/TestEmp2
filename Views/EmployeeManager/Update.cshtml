
<script>
    $(document).ready(function () {
        if (!sessionStorage.hasOwnProperty("token")) {
            window.location.href = "/EmployeeManager/SignIn";
        }
        $("#updateForm").validate({
            rules: {
                firstName: {
                    required: true,
                    maxlength: 10
                },
                lastName: {
                    required: true,
                    maxlength: 10
                },
                title: {
                    required: true,
                    maxlength: 30
                },
                birthDate: "required",
                hireDate: "required",
                country:"required",
                notes: {
                    maxlength: 500
                }
            },
            messages: {
                firstName: "Invalid First Name",
                lastName: "Invalid Last Name",
                title: "Invalid Title",
                birthDate: "Invalid Birth Date",
                hireDate: "Invalid Hire Date",
                country:"Invalid Country",
                notes: "Invalid Notes"
            },
            errorClass: "message"
        });
